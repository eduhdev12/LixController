<!DOCTYPE html>
<html>

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>System Information - LixController</title>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <%- include('./modules/javascripts') %>
  <!-- ADD EXTERNAL JAVASCRIPTS UNDER THIS LINE -->
  <script src="/js/indexscript.js"></script>
</head>

<body>
  <nav class="navbar is-transparent">
    <div class="navbar-brand">
      <a class="navbar-item" href="/">
        <p>LixController</p>
      </a>
      <div class="navbar-burger" data-target="navbarExampleTransparentExample">
        <span></span>
        <span></span>
        <span></span>
      </div>
    </div>

    <div id="navbarExampleTransparentExample" class="navbar-menu">
      <div class="navbar-start">
        <a class="navbar-item" href="/info" style="color: #3273dc;">
          System Info
        </a>
        <a class="navbar-item" href="/terminal">
          Terminal
        </a>
      </div>

      <div class="navbar-end">
        <div class="navbar-item">
          <div class="field is-grouped">
            <p class="control">
              <a class="bd-tw-button button" data-social-network="Discord" data-social-action="discord"
                data-social-target="https://discord.gg/invite" target="_blank" href="https://discord.gg/invite">
                <span class="icon">
                  <i class="fab fa-discord"></i>
                </span>
                <span>
                  Discord
                </span>
              </a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </nav>
  <section class="section">
    <div class="container">
      <article class="panel is-link">
        <p class="panel-heading">
          System Information
        </p>
        <a class="panel-block is-active" id="uptime">
          <span class="panel-icon">
            <i class="fas fa-book" aria-hidden="true"></i>
          </span>
          Loading Uptime...
        </a>
        <a class="panel-block is-active" id="battery">
          <span class="panel-icon">
            <i class="fas fa-book" aria-hidden="true"></i>
          </span>
          Loading Battery...
        </a>
        <a class="panel-block is-active" id="cpu">
          <span class="panel-icon">
            <i class="fas fa-book" aria-hidden="true"></i>
          </span>
          Loading CPU...
        </a>
        <a class="panel-block is-active" id="ram">
          <span class="panel-icon">
            <i class="fas fa-book" aria-hidden="true"></i>
          </span>
          Loading RAM...
        </a>
        <a class="panel-block is-active" id="temp">
          <span class="panel-icon">
            <i class="fas fa-book" aria-hidden="true"></i>
          </span>
          Loading Temps...
        </a>
      </article>
      <div style="margin-top: 15px;">
        <button class="button is-primary" style="background-color: #dcd932;" onclick="restart()"><i class="fas fa-undo"
            style="padding-right: 5px;"></i>Restart</button>
        <button class="button is-primary" style="background-color: #dc3232;" onclick="shutdown()"><i
            class="fas fa-power-off" style="padding-right: 5px;"></i>Shutdown</button>
      </div>
    </div>

  </section>
</body>

<script>
  function restart() {
    window.location.href = "/restartmachine";
  }
  function shutdown() {
    window.location.href = '/poweroffmachine'
  }
</script>
<script>
  $(document).ready(function () {
    // Check for click events on the navbar burger icon
    $(".navbar-burger").click(function () {

      // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
      $(".navbar-burger").toggleClass("is-active");
      $(".navbar-menu").toggleClass("is-active");
    });
  });
</script>

</html>