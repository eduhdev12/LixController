<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Terminal - LixController</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.1/css/bulma.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <%- include('./modules/javascripts') %>
    <!-- ADD EXTERNAL JAVASCRIPTS UNDER THIS LINE -->
</head>

<body>
    <nav class="navbar is-transparent">
        <div class="navbar-brand">
            <a class="navbar-item" href="/">
                <p>LixController</p>
            </a>
            <div class="navbar-burger" data-target="navbarExampleTransparentExample">
                <span></span>
                <span></span>
                <span></span>
            </div>
        </div>

        <div id="navbarExampleTransparentExample" class="navbar-menu">
            <div class="navbar-start">
                <a class="navbar-item" href="/info">
                    System Info
                </a>
                <a class="navbar-item" href="/terminal" style="color: #3273dc;">
                    Terminal
                </a>
            </div>

            <div class="navbar-end">
                <div class="navbar-item">
                    <div class="field is-grouped">
                        <p class="control">
                            <a class="bd-tw-button button" data-social-network="Discord" data-social-action="discord"
                                data-social-target="https://discord.gg/invite" target="_blank"
                                href="https://discord.gg/invite">
                                <span class="icon">
                                    <i class="fab fa-discord"></i>
                                </span>
                                <span>
                                    Discord
                                </span>
                            </a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </nav>
    <section class="section">
        <div class="container">
            <article class="panel is-link">
                <p class="panel-heading">
                    Terminal
                </p>
                <div style="padding-right: 15px; padding-left: 15px;">
                    <% if (!consoleoutput=="") { %>
                    <p><%= consoleoutput %></p>
                    <% } %>
                    <% if (consoleoutput=="") { %>
                    <h2>$ Waiting for command</h2>
                    <% } %>
                </div>
            </article>
            <div style="margin-top: 10px;">
                <form action="/terminal/submit" method="POST" id="terminal">
                    <input class="input" placeholder="Command" type="text" name="id" id="input">
                    <button class="button is-primary" type="submit"
                        style="background-color: #3273dc; margin-top: 15px">Submit</button>
                </form>
            </div>
        </div>

    </section>
</body>
<script>
    $(document).ready(function () {
        // Check for click events on the navbar burger icon
        $(".navbar-burger").click(function () {

            // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
            $(".navbar-burger").toggleClass("is-active");
            $(".navbar-menu").toggleClass("is-active");
        });
    });
</script>

</html>